@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administracao/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">

    <div class="panel-heading" style="min-height:50px">
        <div class="form-group">
            <label class="control-label col-md-10">Listar</label>
            
        </div>
    </div>
    <div class="panel-body">

        <link href="~/Content/StyleTables.css" rel="stylesheet" />


        <hr />

        <div class="method text-center">
            <div class="row margin-0 list-header hidden-sm hidden-xs">
                <div class="col-md-1"><div class="header">ID</div></div>
                <div class="col-md-1"><div class="header">Ativa</div></div>
                <div class="col-md-2"><div class="header">ID Produto</div></div>
                <div class="col-md-3"><div class="header">Nome Produto</div></div>
                <div class="col-md-3"><div class="header">Promocao</div></div>
                <div class="col-md-2"><div class="header">Opções</div></div>
            </div>
            @foreach (var item in Model)
            {
                <div class="row margin-0">

                    <div class="col-md-1">
                        <div class="cell">
                            <div class="propertyname">
                                @item.Id
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="cell">
                            <div class="propertyname">
                                <input type="checkbox" value="true" class="ckbAtivar" @(item.Ativa ? "checked" : "")
                                      disabled />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                    <div class="cell">
                        <div class="propertyname">
                            @item.Produto.Id

                        </div>
                    </div>
                </div>
                    <div class="col-md-3">
                        <div class="cell">
                            <div class="propertyname">
                                @item.Produto.Nome
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="cell">
                            <div class="propertyname">
                                @item.Promocao.Titulo
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-2">
                        <div class="cell">

                            <div class="propertyname">

                                <a class="btn btn-danger lkbExcluir"
                                   data-id="@item.Id"
                                   data-nome="@item.Id"
                                   data-controller="ProdutoPromocao"
                                   data-target="#myModalExcluir"
                                   data-toggle="modal"
                                   title="Excluir">

                                    <i class="fa fa-trash-o"></i>
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="row margin-0 list-header hidden-sm hidden-xs">
            <div class="col-md-12">
                <div class="footer">
                    
                </div>
            </div>

        </div>


    </div>
    <div class="panel-footer text-center">

    </div>
</div>
@Html.Partial("_ModalExcluir")
