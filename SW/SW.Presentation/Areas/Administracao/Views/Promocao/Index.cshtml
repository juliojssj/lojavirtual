@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administracao/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">

    <div class="panel-heading" style="min-height:50px">
        <div class="form-group">
            <label class="control-label col-md-10">Listar</label>
            <div class="col-md-2">
                <a class="btn btn-success" href="@Url.Action("Cadastro", "Promocao").ToLower()">Nova Promocao</a>
            </div>
        </div>
    </div>
    <div class="panel-body">

        <link href="~/Content/StyleTables.css" rel="stylesheet" />


        <hr />

        <div class="method text-center">
            <div class="row margin-0 list-header hidden-sm hidden-xs">
                <div class="col-md-3"><div class="header">Nome Promocao</div></div>
                <div class="col-md-4"><div class="header">Valor</div></div>
                <div class="col-md-2"><div class="header">Tipo</div></div>
                <div class="col-md-3"><div class="header">Opções</div></div>
            </div>
            @foreach (var item in Model)
            {
            <div class="row margin-0">

                <div class="col-md-3">
                    <div class="cell">
                        <div class="propertyname">
                            @item.Titulo

                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="cell">
                        <div class="propertyname">
                            @item.Valor
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="cell">
                        <div class="propertyname">
                            @item.TipoDesconto.Desconto
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="cell">

                        <div class="propertyname">


                            <a class="btn btn-default"
                               title="Editar"
                               href="@Url.Action("Editar", "Promocao", new { id = item.Id })">
                                <i class="fa fa-pencil"></i>
                            </a>
                            &nbsp;
                            <a class="btn btn-danger lkbExcluir"
                               data-id="@item.Id"
                               data-nome="@item.Titulo"
                               data-controller="Promocao"
                               data-target="#myModalExcluir"
                               data-toggle="modal"
                               title="Excluir">

                                <i class="fa fa-trash-o"></i>
                            </a>

                        </div>
                    </div>
                </div>
            </div>
            }

        </div>
    </div>
    <div class="panel-footer text-center">

    </div>
</div>
@Html.Partial("_ModalExcluir")




